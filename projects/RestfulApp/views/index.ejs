<%- include('partials/header') %>

<h1>This is the index page</h1>

<% blogs.forEach(blog => { %>
    <h2><%= blog.title %></h2>
    <img src="<%= blog.image %>">
    <p><%= blog.description.substring(0,100) %>...</p>
    <p>Created at: <%= blog.date %></p>
    <a href="/blog/<%= blog._id %>">Read More</a>
<% }) %>

<%- include('partials/footer') %>