<%- include('../partials/header') %>

<div class="container">
    <h1 class="text-center">Add a New Campground</h1>

    <form action="/campgrounds" method="post" style="width: 30%; margin: 20px auto;">
        <div class="form-group">
            <input class="form-control" type="text" name="campground[title]" placeholder="i.e. Griffith's Camp John">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="campground[image]" placeholder="URL of image"> 
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="campground[description]" placeholder="Description of the campground"> 
        </div>
        <div class="form-group">
            <input class="btn btn-primary btn-block" type="submit">
        </div>
        <div class="form-group">
            <a href="/campgrounds" class="btn btn-block btn-secondary">Go Back</a>
        </div>
    </form>

    
</div>

<%- include('../partials/footer') %>