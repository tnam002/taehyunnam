<%- include('../partials/header') %>

<div class="container">
    <h1 class="text-center">Add a New Comment to "<%= campground.title %>"</h1>

    <form action="/campground/<%= campground._id %>/comment" method="POST" style="width: 30%; margin: 20px auto;">
        <div class="form-group">
            <input class="form-control" type="text" name="comment[author]" placeholder="John Doe">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" placeholder="This was the best steakhouse in town!"> 
        </div>
        <div class="form-group">
            <input class="btn btn-primary btn-block" type="submit">
        </div>
        <div class="form-group">
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-block btn-secondary">Go Back</a>
        </div>
    </form>

    
</div>

<%- include('../partials/footer') %>